{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Feltöltött feladatok</h1>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Állapot</th>
            <th>Feladat</th>
            <th>Leírás</th>
            <th>Időpont</th>
            <th>Szerkesztés</th>
            <th>Törlés</th>
        </tr>   
    </thead>
    <tbody>
        {{#each todos}}
        <tr>
            <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
            <td>{{assignment}}</td>
            <td><span class="badge">{{numberOfMessages}}</span> {{description}}</td>
            <td>{{date}}</td>
            <td><a href="/todos/edit/{{id}}">Szerkesztés</a></td> 
            <td><a href="/todos/delete/{{id}}">Törlés</a></td> 

        </tr>
        {{/each}}
    </tbody>
</table>

<p><a href="/todos/new" class="btn btn-default">Új feladat feltöltése</a></p>